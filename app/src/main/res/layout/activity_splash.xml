<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7db1c9"
    tools:context="com.gru.ovo.view.SplashActivity">

    <ImageView
        android:id="@+id/splashImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:elevation="4dp"
        android:src="@drawable/ovo_logo_redondo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"

        />

    <ImageView
        android:id="@+id/splashTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashImg"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:src="@drawable/titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logos_ministerios"
        android:layout_below="@+id/splashTxt"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>
