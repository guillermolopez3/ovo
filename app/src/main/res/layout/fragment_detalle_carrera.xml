<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gru.ovo.view.DetalleCarreraActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDuracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:text="prueba"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <include layout="@layout/card_detalle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:padding="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPlanEstudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ver plan de estudio"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_weight="0.5"/>

            <Button
                android:id="@+id/btnMapa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="Ver direcciÃ³n"
                android:textColor="@android:color/white"
                android:layout_weight="0.5"/>
        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>